{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@model/*": ["model/*"],
      "@adapter/*": ["adapter/*"],
      "@driver/*": ["driver/*"]
    }
  },
  "lib": ["es2015"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
